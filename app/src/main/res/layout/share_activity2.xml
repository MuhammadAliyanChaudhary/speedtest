<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/result"
    android:background="@drawable/rounder_backgrund_shear"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sharehead"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:text="Internet Speed Test By Speed Test"
        android:visibility="gone"
        android:textColor="@android:color/tab_indicator_text"
        android:textSize="@dimen/_10sdp" />


    <TextView
        android:id="@+id/sharehead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="RESULTS"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="@dimen/_15sdp"
        android:textSize="@dimen/_25sdp" />


    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/rounder_text_backgrund"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/ic_ping_ico"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/headerTextColour"
                android:text="PING"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/tping"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="0 ms"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/rping"/>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="85dp"
            android:layout_marginTop="5dp"
            android:background="@color/headerTextColour"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/ic_download_ico"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/headerTextColour"
                android:text="DOWNLOAD"
                android:layout_gravity="center"
                android:id="@+id/tdownload"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="0 Mbps"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="2"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/rdownload"/>

        </LinearLayout>


        <View
            android:layout_width="2dp"
            android:layout_height="85dp"
            android:layout_marginTop="5dp"
            android:background="@color/headerTextColour"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/ic_upload_ico"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/headerTextColour"
                android:text="UPLOAD"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/tupload"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="0 Mbps"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/rupload"/>

        </LinearLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/thostingname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SERVER : Sri Lanka Telecom"
        android:textColor="@android:color/white"
        android:paddingHorizontal="@dimen/_25sdp"
        android:textSize="@dimen/_17sdp" />


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tlocationname"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="LOCATION : Sri Lanka"
        android:textSize="@dimen/_14sdp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/headerTextColour"
        />

    <TextView
        android:id="@+id/dateview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_gravity="center"
        android:text="2020/07/13"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/timeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_gravity="center"
        android:text="11:17 PM"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Share With Your Friends"
            android:textColor="@color/headerTextColour"
            android:textStyle="bold"
            android:paddingHorizontal="@dimen/_30sdp"
            android:textSize="@dimen/_22sdp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginRight="@dimen/_10sdp"
            >
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/ic_baseline_share_24"
                android:id="@+id/closed"/>
        </LinearLayout>





    </LinearLayout>



</LinearLayout>