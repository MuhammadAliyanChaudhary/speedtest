<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/newbg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/heder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/headerTextColour"
            android:textSize="@dimen/_25sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginLeft="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:padding="5dp"
            android:gravity="start"
            android:visibility="gone"
            android:text="Connection Type: "
            android:textColor="@color/maintextcolor"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:gravity="start"
            android:text="---"
            android:textColor="@color/headerTextColour"
            android:textSize="@dimen/_12sdp"/>


        <Button
            android:id="@+id/thisapprating"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/ic_stars" />

    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_9sdp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="DOWNLOAD"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/headerTextColour"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/downloadTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_gravity="center"
                android:text="0 Mbps"
                android:textAlignment="center"
                android:textColor="@color/maintextcolor"
                android:textSize="@dimen/_19sdp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:background="@color/headerTextColour"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:text="UPLOAD"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/headerTextColour"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />


            <TextView
                android:id="@+id/uploadTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="0 Mbps"
                android:textAlignment="center"
                android:textColor="@color/maintextcolor"
                android:textSize="@dimen/_19sdp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/headerTextColour"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260sdp"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/megabitps" />

        <ImageView
            android:id="@+id/barImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/shelf" />

        <com.jtv7.rippleswitchlib.RippleSwitch
            android:id="@+id/rippleSwitch"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_200sdp"
            app:rs_checked_color="@color/headerTextColour"
            app:rs_unchecked_color="@color/maintextcolor"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_25sdp"/>

        <TextView
            android:id="@+id/datametartype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_230sdp"
            android:background="@color/headerTextColour"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="MEGABIT PER SECOND"
            android:textColor="@color/newbg"
            android:textSize="@dimen/_8sdp"></TextView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/rounder_text_backgrund"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/fhost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="SERVER"
                android:textAlignment="center"
                android:textColor="@color/subtext"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- - -"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textAlignment="center"
                android:textColor="@color/maintextcolor"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="33dp"
            android:layout_marginTop="5dp"
            android:background="@color/headerTextColour"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/flocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="LOCATION"
                android:textAlignment="center"
                android:textColor="@color/subtext"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal|bold" />


            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- - -"
                android:textAlignment="center"
                android:textColor="@color/maintextcolor"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>


        <View
            android:layout_width="2dp"
            android:layout_height="33dp"
            android:layout_marginTop="5dp"
            android:background="@color/headerTextColour"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/fping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="PING"
                android:textAlignment="center"
                android:textColor="@color/subtext"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal|bold" />


            <TextView
                android:id="@+id/pingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- - -"
                android:textAlignment="center"
                android:textColor="@color/maintextcolor"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/startButton"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="@color/headerTextColour"
        android:padding="@dimen/_2sdp"
        android:text="Start Test"
        android:layout_marginTop="10dp"
        android:textColor="@color/newbg"
        android:textSize="@dimen/_11sdp" />


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bannerADsID">
    </com.google.android.gms.ads.AdView>



</LinearLayout>